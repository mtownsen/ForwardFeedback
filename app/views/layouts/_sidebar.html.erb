<aside class="sidebar">
    <div class="scrollbar-inner">
        <div class="user">
            <div class="user__info" data-toggle="dropdown">
                <img class="user__img" src="/demo/img/profile-pics/8.jpg" alt="">
                <div>
                    <div class="user__name"><%= current_user.name %></div>
                    <div class="user__email"><%= current_user.company.name %></div>
                </div>
            </div>

            <div class="dropdown-menu">
                <%= link_to 'View Profile', edit_user_registration_path, class: 'dropdown-item' %>
                <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'dropdown-item' %>
            </div>
        </div>

        <ul class="navigation">
            <li  class="navigation__active">
                <%= link_to(root_path) do %>
                    <i class="zmdi zmdi-home"></i> Home
                <% end %>
            </li>
            <li>
                <%= link_to(groups_path) do %>
                    <i class="zmdi zmdi-bookmark"></i> Contacts
                <% end %>
            </li>
            <li>
                <%= link_to(employees_path) do %>
                    <i class="zmdi zmdi-male-female"></i> Feedback
                <% end %>
            </li>
        </ul>
    </div>
</aside>